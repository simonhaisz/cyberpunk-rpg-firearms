{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "lib": [
            "es2019"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}